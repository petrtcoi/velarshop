      title={'Нижнее подключение трубчатого радиатора с м/о расстоянием 50 мм'}
      loading={'lazy'}
      aspectRatio="667:1000"
      widths={[290, 400, 600, 1000]}
      width={300}
      sizes="300px"
      class="border-[1px] border-slate-300 rounded-lg"
    />
    <Picture
      src={'/images/columns/8.jpg'}
      alt={'Черный трубчатый радиатор Velar с нижним подключением'}
      title={'Черный трубчатый радиатор Velar с нижним подключением'}
      loading={'lazy'}
      aspectRatio="667:1000"
      widths={[290, 400, 600, 1000]}
      width={300}
      sizes="300px"
      class="border-[1px] border-slate-300 rounded-lg"
    />
    <Picture
      src={'/images/columns/9.jpg'}
      alt={'Белый трубчатый радиатор Velar с нижним подключением'}
      title={'Белый трубчатый радиатор Velar с нижним подключением'}
      loading={'lazy'}
      aspectRatio="667:1000"
      widths={[290, 400, 600, 1000]}
      width={300}
      sizes="300px"
      class="border-[1px] border-slate-300 rounded-lg"
    />
  </div>
</section>
