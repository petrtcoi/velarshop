      widths={[290, 400, 600, 1000]}
      width={300}
      sizes="300px"
      class="border-[1px] border-slate-300 rounded-lg mx-auto md:mx-0"
    />
    <Picture
      src={'/images/retro/retro_3.jpg'}
      alt={'Чугунный ретро-радиатор Velar в интерьере'}
      title={'Чугунный ретро-радиатор Velar в интерьере'}
      loading={'lazy'}
      aspectRatio="1:1"
      widths={[290, 400, 600, 1000]}
      width={300}
      sizes="300px"
      class="border-[1px] border-slate-300 rounded-lg"
    />
    <Picture
      src={'/images/retro/retro_4.jpg'}
